@model List<BookStore2.Models.AuthorViewModel>

@{
    ViewData["Title"] = "Index";

}
@Model List<AuthorModel>

    <h1>Authors</h1>

    <form>
        <button asp-action="AddAuthor" asp-controller="Author" class="btn btn-primary">Add Author</button>
    </form>
    <table class="table table-responsive table-hover">
        <thead>
            <tr>
                <th>id</th>
                <th>Name</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var author in Model)
                {
                    <tr>
                        <td>@author.Id</td>
                        <td>@author.Name</td>
                        <td>
                            <form>
                            <div class="btn-group btn-group-sm">
                                    <button asp-action="Edit" asp-controller="Author"  asp-route-id="@author.Id" class="btn btn-primary">Edit</button>


                            </div>
                            <div class="btn-group btn-group-sm">
                                    <button asp-action="Delete" asp-controller="Author" asp-route-id="@author.Id" class="btn btn-danger">Delete</button>
                            </div>
                            </form>
                        </td>
                    </tr>
                    

                }
            }
            else
            {
                <tr>
                    <td colspan="2">
                        <div><p>No Authors Avaliable at the moment</p></div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
