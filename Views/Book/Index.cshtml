@model List<BookStore2.Models.BookViewModel>

@{
    ViewData["Title"] = "Book Main page";

}
@Model List<BookModel>

    <h1>@ViewData["Title"]</h1>

    <form>
        <button asp-action="AddBook" asp-controller="Book" class="btn btn-primary">Add Book</button>
    </form>
    <table class="table table-responsive table-hover">
        <thead>
            <tr>
                <th>id</th>
                <th>Name</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var book in Model)
                {
                    <tr>
                        <td>@book.Id</td>
                        <td>@book.Title</td>
                        <td>
                            <div class="btn-group btn-group-sm">
                                <div class="btn-group btn-group-sm">
                                    <a href="localhost:7011/Book/EditBook/@book.Id" class="btn btn-primary">Edit</a>
                                </div>
                                <div class="btn-group btn-group-sm">
                                    <a href="localhost:7011/Admin/DeleteBook/@book.Title" class="btn btn-danger">delete</a>
                            </div>
                        </td>
                    </tr>

                }
            }
            else
            {
                <tr>
                    <td colspan="2">
                        <div><p>No User  Avaliable at the moment</p></div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
