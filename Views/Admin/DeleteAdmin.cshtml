@model BookStore2.Models.AdminViewModel
@{
    Layout = "_Layout";
    TempData["Title"] = "Update Admin";
    //var successMessage = TempData["successMessage"]?.ToString();
    //var errorMessage = TempData["errorMessage"]?.ToString();
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AddAdmin</title>
    <style>
        input {
            padding: 5px;
        }

        div {
            margin: 5px;
        }
    </style>
</head>
<body>
    <form action="UpdateAdmin" method="post">
        <div class="mb-3">
            <label class="form-label">Id</label>
            <input type="text" class="form-control" asp-for="Id" readonly />
        </div>
        <div class="mb-3">
            <label class="form-label">Name</label>
            <input type="text" class="form-control" asp-for="Name" />
        </div>
        <div class="d-grid">
            <button type="submit" class="btn btn-primary" onclick="return function('Are you sure to delete Admin :@model'")>Submit</button>
        </div>
    </form>
</body>
</html>
